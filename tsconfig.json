{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "ESNext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@App/*": [
        "./src/App/*"
      ],
      "@Components/*": [
        "./src/components/*"
      ],
      "@Views/*": [
        "./src/views/*"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "server.js"
  ]
}
